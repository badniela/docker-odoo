<odoo>
    <record id="view_hr_leave_reason_tree" model="ir.ui.view">
        <field name="name">hr.leave.reason.tree</field>
        <field name="model">hr.leave.reason</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="view_hr_leave_reason_form" model="ir.ui.view">
        <field name="name">hr.leave.reason.form</field>
        <field name="model">hr.leave.reason</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_leave_reason" model="ir.actions.act_window">
        <field name="name">Motivos de Ausencia</field>
        <field name="res_model">hr.leave.reason</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_hr_leave_reason"
        name="Motivos de Ausencia"
        parent="hr_holidays.menu_hr_holidays_configuration"
        action="action_hr_leave_reason" />
</odoo>